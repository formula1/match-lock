{
  "compilerOptions": {
    "target": "es2024",
    "lib": ["es2024", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": false,
    "outDir": "dist-electron",
    "rootDir": "src",
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    
    /* Node.js specific */
    "types": ["node", "electron"],
    "resolveJsonModule": true
    
  },
  "include": [
    "src/electron/main/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-electron"
  ]
}
