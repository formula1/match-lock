{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "node16",
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": false,
    "outDir": "../../dist-ipc",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    
    /* Node.js specific */
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./@types"],
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../../dist-ipc"
  ]
}
