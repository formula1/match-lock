{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MatchLock Config Editor",
  "version": "0.0.0",
  "identifier": "com.matchlock.prep-app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev:vite",
    "beforeBuildCommand": "npm run build:renderer"
  },
  "app": {
    "windows": [
      {
        "title": "MatchLock Config Editor",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "shell:allow-open",
            "shell:allow-execute",
            {
              "identifier": "shell:allow-spawn",
              "allow": [{ "name": "binaries/node-sidecar", "sidecar": true }]
            },
            "dialog:allow-open",
            "dialog:allow-save",
            "dialog:default",
            "core:event:allow-listen",
            "core:event:default"
          ]
        }
      ]
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [
      "binaries/node-sidecar"
    ]
  }
}
