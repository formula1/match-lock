{
  "name": "@match-lock/server",
  "version": "0.0.0",
  "description": "To be used to connect multiple clients",
  "keywords": [
    "match-lock",
    "game"
  ],
  "homepage": "https://github.com/formula1/match-lock#readme",
  "bugs": {
    "url": "https://github.com/formula1/match-lock/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/formula1/match-lock.git"
  },
  "license": "JSON",
  "author": "Sam Tobia",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "scripts": {
    "dev": "npm run build:client && wrangler dev",
    "dev:client": "cd client && npm run dev",
    "dev:client:watch": "cd client && npm run build -- --watch",
    "build:client": "cd client && npm run build",
    "deploy": "npm run build:client && wrangler deploy",
    "deploy:production": "npm run build:client && wrangler deploy --env production",
    "tail": "wrangler tail",
    "types": "wrangler types"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260103.0",
    "@types/express": "^5.0.6",
    "@types/node": "^22.14.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "wrangler": "^4.54.0"
  },
  "dependencies": {
    "@noble/ed25519": "^3.0.0",
    "hono": "^4.11.3",
    "zod": "^4.3.5"
  }
}
